{
  "compilerOptions": {
    "module": "none",
    "target": "es5",
    "sourceMap": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outFile": "cards.js"
  },
  "include": [
    "src/**/*.ts"
  ]
}
